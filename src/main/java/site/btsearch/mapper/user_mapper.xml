<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
				PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
				"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.btsearch.mapper.UserMapper">

	<select id="queryUID" parameterType="java.lang.String" resultType="java.lang.String">
		SELECT UID FROM SYS_USER WHERE USERNAME = #{UID} AND PASSWORD = #{PWD} AND YXBJ = 1;
	</select>

	<select id="queryUserInfo" parameterType="java.lang.String" resultType="java.util.Map">
		SELECT UID,MAIL,PHONE,LASTLOGINTIME FROM SYS_USER_INFO WHERE UID = #{UID}
	</select>

	<select id="querySessionUID" parameterType="java.lang.String" resultType="java.lang.String">
		SELECT UID FROM SYS_USER_SESSION WHERE SESSIONID = #{SESSIONID}
	</select>

	<insert id="insertSession" parameterType="java.util.Map" >
		INSERT INTO SYS_USER_SESSION VALUES (#{SESSIONID},#{UID},#{CREATEDATE})
	</insert>


	<select id="queryUser" parameterType="java.lang.String" resultType="java.lang.String">
		SELECT UID FROM SYS_USER WHERE UID = #{UID} AND YXBJ = 1;
	</select>

</mapper>
